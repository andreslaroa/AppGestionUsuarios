@{
    ViewData["Title"] = "Inicio de Sesión";
}

@section Styles {
        <style>
            /* Fondo de la página con la imagen */
            body {
                background-image: url('/images/plaza-mayor-salamanca.jpg');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
                min-height: 100vh;
            }

            /* Contenedor del formulario */
            .login-container {
                max-width: 400px; /* Más estrecho para los campos */
                margin: 50px auto;
                background-color: rgba(255, 255, 255, 0.9); /* Fondo blanco con opacidad */
                border: 3px solid #d4af37; /* Borde dorado */
                border-radius: 10px;
                padding: 30px;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            }

            h2 {
                color: #960018;
                margin-bottom: 25px;
                text-align: center;
                font-weight: bold;
            }

            .form-group {
                margin-bottom: 20px;
            }

            label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
                color: #333;
            }

            input[type="text"],
            input[type="password"] {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 6px;
                background-color: #f9f9f9;
                font-size: 16px;
                transition: border-color 0.3s ease;
            }

            input:focus {
                border-color: #960018;
                outline: none;
                box-shadow: 0 0 5px rgba(150, 0, 24, 0.3);
            }

            button {
                width: 100%;
                padding: 12px;
                background-color: #960018;
                color: white;
                font-weight: bold;
                border: none;
                border-radius: 6px;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

            button:hover {
                background-color: #7a0013;
            }

            .message {
                margin-top: 15px;
                text-align: center;
            }
        </style>
}

<div class="login-container">
    <h2>Inicio de Sesión</h2>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label for="username">Nombre de Usuario</label>
            <input type="text" id="username" name="username" required />
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" required />
        </div>
        <button type="submit">Iniciar Sesión</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
            <div class="message" style="color: #960018;">@ViewBag.Message</div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.DomainCheckResult))
    {
            <div class="message" style="color: #28a745;">@ViewBag.DomainCheckResult</div>
    }
</div>